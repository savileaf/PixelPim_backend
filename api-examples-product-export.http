### Available Product Attributes:

# Basic Product Information:
# - "id": Product ID
# - "name": Product Name
# - "sku": Product SKU
# - "status": Product Status
# - "productLink": Product Link/URL
# - "imageUrl": Product Image URL
# - "userId": User ID (owner)
# - "createdAt": Creation timestamp
# - "updatedAt": Last update timestamp

# Category Information:
# - "categoryId": Category ID
# - "categoryName": Category Name
# - "categoryDescription": Category Description

# Attribute Information:
# - "attributeId": Primary Attribute ID
# - "attributeName": Primary Attribute Name
# - "attributeType": Primary Attribute Type
# - "attributeDefaultValue": Primary Attribute Default Value

# Attribute Group Information:
# - "attributeGroupId": Attribute Group ID
# - "attributeGroupName": Attribute Group Name
# - "attributeGroupDescription": Attribute Group Description

# Family Information:
# - "familyId": Family ID
# - "familyName": Family Name

# Variant Information:
# - "variantCount": Number of variants
# - "variantNames": Comma-separated variant names
# - "variantSkus": Comma-separated variant SKUs

